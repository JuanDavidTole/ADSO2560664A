a=int(input("ingrese numerador1"))
b=int(input("ingrese denominador1"))
c=int(input("ingrese numerador2"))
d=int(input("ingrese denominador2"))
suma=(a*d+b*c)
lasuma=(b*d)
resultado=suma/lasuma 
print("resultado de la suma:", resultado)
resta=(a*d-b*c)
laresta=(b*d)
resultadoresta=resta/laresta
print("restltado de la resta:", resultadoresta)
multiplicacion=(a*c)
multiplicador=(b*d)
resultadomultiplicacion=(multiplicacion/multiplicador)
print(" resultado de la multiplicacion:", resultadomultiplicacion)
divi=(a*d)
divisor=(b*c)
resultadodivision=( divi/divisor)
print(" resultado division:", resultadodivision)
